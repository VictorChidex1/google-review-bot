rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isAdmin() {
      return exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    // Rules for 'history' collection
    match /history/{document} {
      allow read: if isAuthenticated() && (resource.data.userId == request.auth.uid || isAdmin());
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      // ALLOW DELETE: If the user owns the document OR is an admin
      allow delete: if isAuthenticated() && (resource.data.userId == request.auth.uid || isAdmin());
    }

    // Rules for 'users' collection
    match /users/{userId} {
      allow read: if request.auth.uid == userId || isAdmin();
      // Allow users to delete their own account
      allow delete: if request.auth.uid == userId;
      // Allow users to create their own account (for signup)
      allow create: if request.auth.uid == userId;
      // VERIFIED: Allows users to update 'photoURL', 'displayName', etc.
      // Security: Prevents users from granting themselves 'isAdmin' privileges.
      allow update: if isAdmin() || (request.auth.uid == userId && 
         (!('isAdmin' in request.resource.data) || request.resource.data.isAdmin == resource.data.isAdmin));
    }

    // Rules for 'contact_messages' collection
    match /contact_messages/{messageId} {
      allow create: if true; // Public can create
      allow read, update, delete: if isAdmin();
    }

    // Rules for 'user_limits' collection
    match /user_limits/{userId} {
      // READ: Users can check "Am I over the limit?"
      allow read: if request.auth.uid == userId || isAdmin();
      
      // WRITE: LOCKED ðŸ”’
      // Only the Backend (Admin SDK) can write to this collection.
      // Users cannot reset their own limits.
      allow write: if false; 
    }

    // Profile Pictures: /profile_pictures/{userId}
    match /profile_pictures/{userId} {
      // READ: Public or Authenticated? 
      // Let's make it public for now so the URL works easily, 
      // or at least require auth. Let's start with auth required.
      allow read: if isAuthenticated(); 
      
      // WRITE: Only the owner can write
      allow write: if isOwner(userId)
                   && request.resource.size < 5 * 1024 * 1024 // Max 5MB
                   && request.resource.contentType.matches('image/.*');
    }
  }
}
